<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ConnexionServeurDesactiverActivity">

    <ImageView
        android:id="@+id/icon_serveur_desactiver"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/connexion_desactiver"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
    </ImageView>

    <TextView
        android:id="@+id/connexion_impossible_serveur_desactiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="19sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/connexion_serveur_impossible"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_serveur_desactiver">
    </TextView>

    <TextView
        android:id="@+id/ressayer_connexion_desactiver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text="@string/ressayer"
        android:textColor="@color/gray"
        android:drawableStart="@drawable/reload"
        android:drawablePadding="5dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/connexion_impossible_serveur_desactiver">
    </TextView>
</androidx.constraintlayout.widget.ConstraintLayout>