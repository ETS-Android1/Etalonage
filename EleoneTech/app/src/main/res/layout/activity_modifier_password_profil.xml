<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ModifierPasswordProfilActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_modifier_password"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/white"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:logo="@drawable/logo_societe"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/toolbar_modifier_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <LinearLayout
                android:id="@+id/wallpaper_modifier_password"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_margin="25dp"
                android:background="@drawable/wallpaper_profil"
                android:backgroundTint="@color/transparent"
                android:backgroundTintMode="src_over"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </LinearLayout>

            <Space
                android:id="@+id/space_modifier_password"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="62dp"
                app:layout_constraintBottom_toBottomOf="@id/wallpaper_modifier_password"
                app:layout_constraintStart_toStartOf="@id/wallpaper_modifier_password"
                app:layout_constraintEnd_toEndOf="@id/wallpaper_modifier_password">
            </Space>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/photo_modifier_password"
                android:layout_width="130dp"
                android:layout_height="130dp"
                app:civ_border_width="8dp"
                app:civ_border_color="@color/white"
                android:src="@drawable/profil_aide"
                app:layout_constraintTop_toBottomOf="@id/space_modifier_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </de.hdodenhof.circleimageview.CircleImageView>

            <TextView
                android:id="@+id/nom_prenom_modifier_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:letterSpacing="0.06"
                android:text="@string/titre_profil_hint"
                android:textAllCaps="true"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/photo_modifier_password">
            </TextView>

            <TextView
                android:id="@+id/poste_modifier_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textAllCaps="true"
                android:textStyle="normal"
                android:text="@string/poste_profil_home"
                android:textColor="@color/black"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/nom_prenom_modifier_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
            </TextView>

            <LinearLayout
                android:id="@+id/linear_layout_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/wallpaper_white"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                app:layout_constraintTop_toBottomOf="@id/poste_modifier_password"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/update_informations_modifier_password"
                    android:layout_width="150dp"
                    android:layout_height="60dp"
                    android:layout_margin="15dp"
                    android:background="@drawable/button_bleu"
                    android:clickable="true"
                    android:focusable="true"
                    android:textAllCaps="true"
                    android:text="@string/tittre_button_profil"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:padding="15dp"
                    android:drawableLeft="@drawable/modifier">
                </androidx.appcompat.widget.AppCompatButton>

                <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/consulter_profil_modifier_password"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_orange"
                android:clickable="true"
                android:focusable="true"
                android:textAllCaps="true"
                android:text="@string/consulter_infos"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="15dp"
                android:drawableLeft="@drawable/profil_white">
            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

        <View
            android:id="@+id/ligne_separation_modifier_password"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:backgroundTint="@color/gray"
            android:layout_margin="25dp"
            app:layout_constraintTop_toBottomOf="@id/linear_layout_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        </View>

         <LinearLayout
             android:id="@+id/linear_layout_password"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical"
             android:layout_margin="25dp"
             android:background="@color/white"
             app:layout_constraintTop_toBottomOf="@id/ligne_separation_modifier_password"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent"
             app:layout_constraintBottom_toBottomOf="parent">

             <TextView
                 android:id="@+id/titre_modifier_password"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:gravity="center"
                 android:letterSpacing="0.06"
                 android:text="@string/tittre_modifier_password"
                 android:textAllCaps="true"
                 android:textColor="@color/black"
                 android:textSize="14sp"
                 android:textStyle="bold"
                 android:layout_gravity="center"
                 android:layout_marginBottom="20dp">
             </TextView>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_margin="5dp"
                 android:paddingTop="15dp"
                 android:paddingBottom="15dp"
                 android:background="@drawable/linear_layout_purple_light">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/layout_ancien_password_modifier_password"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dp"
                     android:textColorHint="@color/bleu"
                     app:boxStrokeWidth="0dp"
                     app:boxStrokeWidthFocused="0dp"
                     app:errorEnabled="false"
                     app:errorIconDrawable="@null"
                     app:hintTextColor="@color/bleu"
                     app:passwordToggleEnabled="true"
                     app:passwordToggleTint="@color/bleu"
                     app:startIconDrawable="@drawable/password"
                     app:startIconTint="@color/bleu">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/ancien_password_modifier_password"
                         android:layout_width="match_parent"
                         android:layout_height="60dp"
                         android:background="@drawable/edit_text_white"
                         android:hint="@string/ancien_password_hint"
                         android:inputType="textPassword"
                         android:textColor="@color/bleu"
                         android:textSize="10dp"
                         android:textStyle="bold">
                     </com.google.android.material.textfield.TextInputEditText>
                 </com.google.android.material.textfield.TextInputLayout>

                 <TextView
                     android:id="@+id/erreur_ancien_password_modifier_password"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_marginTop="0dp"
                     android:textColor="@color/rouge"
                     android:textSize="10dp">
                 </TextView>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_margin="5dp"
                 android:paddingTop="15dp"
                 android:paddingBottom="15dp"
                 android:background="@drawable/linear_layout_orange_light">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/layout_nouveau_password_modifier_password"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dp"
                     android:textColorHint="@color/bleu"
                     app:boxStrokeWidth="0dp"
                     app:boxStrokeWidthFocused="0dp"
                     app:errorEnabled="false"
                     app:errorIconDrawable="@null"
                     app:hintTextColor="@color/bleu"
                     app:passwordToggleEnabled="true"
                     app:passwordToggleTint="@color/bleu"
                     app:startIconDrawable="@drawable/password"
                     app:startIconTint="@color/bleu">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/nouveau_password_modifier_password"
                         android:layout_width="match_parent"
                         android:layout_height="60dp"
                         android:background="@drawable/edit_text_white"
                         android:hint="@string/nouveau_password_hint"
                         android:inputType="textPassword"
                         android:textColor="@color/bleu"
                         android:textSize="10dp"
                         android:textStyle="bold">
                     </com.google.android.material.textfield.TextInputEditText>
                 </com.google.android.material.textfield.TextInputLayout>

                 <TextView
                     android:id="@+id/erreur_nouveau_password_modifier_password"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_marginTop="0dp"
                     android:textColor="@color/rouge"
                     android:textSize="10dp">
                 </TextView>
             </LinearLayout>

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical"
                 android:layout_margin="5dp"
                 android:paddingTop="15dp"
                 android:paddingBottom="15dp"
                 android:background="@drawable/linear_layout_purple_light">

                 <com.google.android.material.textfield.TextInputLayout
                     android:id="@+id/layout_confirmer_nouveau_password_modifier_password"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_margin="10dp"
                     android:textColorHint="@color/bleu"
                     app:boxStrokeWidth="0dp"
                     app:boxStrokeWidthFocused="0dp"
                     app:errorEnabled="false"
                     app:errorIconDrawable="@null"
                     app:hintTextColor="@color/bleu"
                     app:passwordToggleEnabled="true"
                     app:passwordToggleTint="@color/bleu"
                     app:startIconDrawable="@drawable/password"
                     app:startIconTint="@color/bleu">

                     <com.google.android.material.textfield.TextInputEditText
                         android:id="@+id/confirmer_nouveau_password_modifier_password"
                         android:layout_width="match_parent"
                         android:layout_height="60dp"
                         android:background="@drawable/edit_text_white"
                         android:hint="@string/repeter_password_hint"
                         android:inputType="textPassword"
                         android:textColor="@color/bleu"
                         android:textSize="10dp"
                         android:textStyle="bold">
                     </com.google.android.material.textfield.TextInputEditText>
                 </com.google.android.material.textfield.TextInputLayout>

                 <TextView
                     android:id="@+id/erreur_confirmer_nouveau_password_modifier_password"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:gravity="center"
                     android:layout_gravity="center"
                     android:layout_marginTop="0dp"
                     android:textColor="@color/rouge"
                     android:textSize="10dp">
                 </TextView>
             </LinearLayout>

             <androidx.appcompat.widget.AppCompatButton
                 android:id="@+id/update_password_modifier_password"
                 android:layout_width="match_parent"
                 android:layout_height="60dp"
                 android:layout_margin="30dp"
                 android:background="@drawable/button_bleu"
                 android:clickable="true"
                 android:focusable="true"
                 android:textAllCaps="true"
                 android:text="@string/changer_password_button"
                 android:textColor="@color/white"
                 android:textStyle="bold"
                 android:padding="15dp"
                 android:layout_gravity="center"
                 android:gravity="center">
             </androidx.appcompat.widget.AppCompatButton>
         </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>